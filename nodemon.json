{
  "restartable": "rs",
  "ignore": [
    "README.md",
    "Procfile",
    ".*",
    "views/",
    "public/",
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "app.js",
    "bin/",
    "db/",
    "classes/",
    "helpers/",
    "routes/",
    "services/"
  ],
  "env": {
    "NODE_ENV": "development",
    "DEV": "true"
  },
  "ext": "js,json"
}
