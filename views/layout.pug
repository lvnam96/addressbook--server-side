doctype html
html(lang="en")
    head
        block pageTitle
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
        //- for mobile: (missing manifest.json)
        link(rel="manifest", href="/manifest.webmanifest")
        link(href="https://unpkg.com", rel="dns-prefetch")
        block meta
        //- link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.11.2/css/all.css", integrity="sha384-O8whS3fhG2OnA5Kas0Y9l3cfpmYjapjI0E4theH4iuMD+pLhbf6JI0jIMfYcK3yZ", crossorigin="anonymous")
        //- link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css", integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        link(href="/core.css", rel="stylesheet")
        block closeHead
    body
        block openBody
        block beforeContent
        block content
        block afterContent
        script(src="/core.js")
        //- script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
        //- script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js", integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1", crossorigin="anonymous")
        //- script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js", integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM", crossorigin="anonymous")
        if !!htmlWebpackPlugin && !htmlWebpackPlugin.options.prod
            //- THESE LINES ARE COMMENTED OUT B/C OF USING LOCAL react PACKAGES WHEN IN DEVELOPMENT
            //- script(crossorigin, src="https://unpkg.com/react@^16.12/umd/react.development.js")
            //- script(crossorigin, src="https://unpkg.com/react-dom@^16.12/umd/react-dom.development.js")
        else
            script(crossorigin="anonymous", src="https://unpkg.com/react@^16.12/umd/react.production.min.js")
            script(crossorigin="anonymous", src="https://unpkg.com/react-dom@^16.12/umd/react-dom.production.min.js")
        block closeBody
