{
  "name": "addressbook--server-side",
  "version": "1.0.0-alpha",
  "private": true,
  "scripts": {
    "heroku-postbuild": "npm --prefix ./views install ./views && cd ./views && webpack --config webpack.config.ssr.js && webpack --config webpack.config.prod.js",
    "prepare-dev-frontend": "cd ./views && npm run build:dev",
    "prepare-prod-frontend": "cd ./views && npm run build",
    "prestart": "DEV=true npm run prepare-prod-frontend",
    "start": "nodemon ./bin/www",
    "predeploy": "npm run prepare-prod-frontend",
    "deploy": "NODE_ENV=production node ./bin/www"
  },
  "engines": {
    "node": "10.15.3"
  },
  "dependencies": {
    "async": "^2.6.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "connect-pg-simple": "^5.0.0",
    "cookie-parser": "^1.4.4",
    "debug": "^3.1.0",
    "express": "^4.16.4",
    "express-session": "^1.16.1",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "node-gyp": "^3.6.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.10.0",
    "pg-promise": "^8.6.5",
    "pug": "^2.0.3",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.3.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-react": "^7.11.0",
    "nodemon": "^1.17.4",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-node-externals": "^1.7.2"
  }
}
